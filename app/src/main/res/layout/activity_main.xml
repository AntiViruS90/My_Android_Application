<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/cardview_default_radius"
    android:layout_marginStart="@dimen/material_emphasis_disabled"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/car">

    <TextView
        android:id="@+id/wordLimitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_300"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginTop="8dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="36dp"
        android:text="@string/_0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106dp"
        android:layout_centerHorizontal="true"


        android:text="@string/random_word"
        android:textColor="@android:color/darker_gray"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Напишите слово"
        android:layout_marginTop="156dp"
        android:inputType="text"
        android:textAlignment="center"
        android:padding="16dp"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="226dp"
        android:layout_marginStart="90dp"
        android:layout_centerHorizontal="true"
        android:text="Нажми для проверки" />

</RelativeLayout>


